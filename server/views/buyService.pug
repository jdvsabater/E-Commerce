extends layout.pug
block content

    
    div(class="container")

    if sampS == 0
        h4 Services
        h4 No Entries
    else
        h4 Services
        table.table
            tr
                th Name
                th Description
                th Type
                th Prices
                each val, index in sampleS
                    tr 
                        td=sampleS[index].serviceName
                        td=sampleS[index].description
                        td=sampleS[index].type
                        td=sampleS[index].price
                        td
                            
                            form(action='/orderService' method='post')    
                                input.hidden(type="hidden" value=sampleS[index].serviceId name='serviceId')
                                input.hidden(type="hidden" value=sampleS[index].userId name='userId')
                                    
                                button.btn(type="submit") Order