doctype html
html(lang='en')
  head
    meta(charset='utf-8')
    meta(http-equiv='X-UA-Compatible', content='IE=edge')
    meta(name='viewport', content='width=device-width, initial-scale=1')
    title Lexus E-Commerce
    // CSS
    link(rel='stylesheet', href='http://fonts.googleapis.com/css?family=Roboto:400,100,300,500')
    link(rel='stylesheet', href='assets/bootstrap/css/bootstrap.min.css')
    link(rel='stylesheet', href='assets/font-awesome/css/font-awesome.min.css')
    link(rel='stylesheet', href='assets/css/form-elements.css')
    link(rel='stylesheet', href='assets/css/style.css')

  body
    // Top content
    .top-content
      .inner-bg
        .container
          .row
            .col-sm-8.col-sm-offset-2.text
              h1
                strong Welcome to
                |  Lexus E-Commerce
              .description
                p
                  |Finding ways to buy and Sell 
                  strong "Services and Products"
                  
          .row
            .col-sm-5
              .form-top
                .form-top-left
                  h3 Login to our site
                  p Enter username and password to log on:
                .form-top-right
                  i.fa.fa-lock
              .form-bottom
                form.login-form(name='logForm'  action='/', method='post')
                  .form-group
                    label.sr-only(for='form-usernameL') Username
                    input.form-usernameL.form-control(id='usernameL' type='text', name='usernameL', placeholder='Username...')
                  .form-group
                    label.sr-only(for='form-passwordL') Password
                    input.form-passwordL.form-control(id='passwordL' type='password', name='passwordL', placeholder='Password...')
                  button.btn#login(type='submit' disabled='disabled' ) Sign in!
            .col-sm-1.middle-border
            .col-sm-1
            .col-sm-5
              .form-top
                .form-top-left
                  h3 Sign up now
                  p Fill in the form below to get instant access:
                .form-top-right
                  i.fa.fa-pencil
              .form-bottom
                form.registration-form(role='form', action='', method='')
                  .form-group
                    label.sr-only(for='form-first-name') First name
                    input#form-first-name.form-first-name.form-control(type='text', name='form-first-name', placeholder='First name...')
                  .form-group
                    label.sr-only(for='form-last-name') Last name
                    input#form-last-name.form-last-name.form-control(type='text', name='form-last-name', placeholder='Last name...')
                  .form-group
                    label.sr-only(for='form-email') Email
                    input#form-email.form-email.form-control(type='text', name='form-email', placeholder='Email...')
                  .form-group
                    label.sr-only(for='form-number') Mobile Number
                    input#form-number.form-number.form-control(type='text', name='form-number', placeholder='Mobile Number...' onkeypress="return isNumber(event)")
                  .form-group
                    label.sr-only(for='form-username') Username
                    input#form-username.form-username.form-control(type='text', name='form-username', placeholder='Username...')
                  .form-group
                    label.sr-only(for='form-email') Password
                    input#form-password.form-password.form-control(type='password', name='form-password', placeholder='Password...')
                  .form-group
                    label.sr-only(for='form-address') Address
                    textarea#form-address.form-address.form-control(name='form-address', placeholder='Address...')
                  
                  button.btn#register(type='submit' v:onclick='register' disabled='disabled' ) Sign me up!
    // Footer
    footer
      .container
        .row
          .col-sm-8.col-sm-offset-2
            .footer-border
            p
              | Made by Sabater and Friends at 
              strong Unionbank.
              |         					Saba for Life.
              
    // Javascript
    script(src='assets/js/jquery-1.11.1.min.js')
    script(src='assets/bootstrap/js/bootstrap.min.js')
    script(src='assets/js/jquery.backstretch.min.js')
    script(src='assets/js/scripts.js')
    script(src='axios.min.js')
    script(src='register.js')
    //if lt IE 10
      script(src='assets/js/placeholder.js')
